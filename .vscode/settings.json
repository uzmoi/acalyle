{
  "editor.formatOnSave": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode", // cspell:ignore esbenp
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
  },
  "[rust]": {
    "editor.defaultFormatter": "rust-lang.rust-analyzer",
  },
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml", // cspell:ignore tamasfe
  },
  "files.watcherExclude": {
    "**/routeTree.gen.ts": true,
    "**/target": true,
  },
  "files.readonlyInclude": {
    "**/routeTree.gen.ts": true,
    "**/target": true,
  },
  "explorer.fileNesting.patterns": {
    "*.graphql": "${capture}.d.graphql.ts, ${capture}.d.graphql.ts.map",
  },
  "eslint.workingDirectories": [
    { "pattern": "apps/*" },
    { "pattern": "packages/*" },
  ],
  // "stylelint.validate": ["css", "typescript", "typescriptreact"],
  "eslint.experimental.useFlatConfig": true,
  "typescript.tsdk": "node_modules/typescript/lib",
  "unocss.root": ["apps/client"],
}
