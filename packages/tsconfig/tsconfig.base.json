{
    "compilerOptions": {
        "target": "ESNext",
        "useDefineForClassFields": true,
        "verbatimModuleSyntax": true,
        "lib": ["ESNext"],
        "allowJs": false,
        "skipLibCheck": true,
        "strict": true,
        "noUncheckedIndexedAccess": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "bundler",
        "noEmit": true,
        "plugins": [
            { "name": "eslint-plugin-import-access" },
        ],
    },
}