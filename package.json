{
  "private": true,
  "name": "acalyle",
  "type": "module",
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "check": "turbo run check",
    "prelint": "npm run build -w @acalyle/eslint-config && npm run codegen -w @acalyle/client",
    "lint": "eslint .",
    "test": "turbo run test",
    "coverage": "turbo run coverage",
    "format": "prettier -c .",
    "spell": "cspell --no-progress ."
  },
  "devDependencies": {
    "@eslint/js": "^8.54.0",
    "cspell": "^8.3.2",
    "eslint": "^8.54.0",
    "globals": "^13.23.0",
    "lefthook": "^1.5.5",
    "prettier": "^3.1.0",
    "turbo": "^1.10.16",
    "typescript": "^5.3.2"
  }
}
