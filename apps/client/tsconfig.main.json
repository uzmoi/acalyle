{
    "extends": "@acalyle/tsconfig/tsconfig.web.json",
    "include": ["src"],
    "exclude": ["**/*.test.*", "**/*.test-d.*", "**/*.stories.*"],
    "compilerOptions": {
        "jsx": "react-jsx",
        "lib": ["DOM", "DOM.Iterable", "ESNext"],
        "baseUrl": "./",
        "paths": { "~/*": ["./src/*"] },
        "allowArbitraryExtensions": true,
        "noEmit": false,
        "composite": true,
    },
}
