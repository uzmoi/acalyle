datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Book {
    id          String   @id
    thumbnail   String
    title       String
    description String
    createdAt   DateTime
    updatedAt   DateTime
    memos       Memo[]
    settings    Bytes
}

model Memo {
    id        String    @id
    contents  String
    tags      MemoTag[]
    createdAt DateTime
    updatedAt DateTime
    Book      Book      @relation(fields: [bookId], references: [id], onDelete: Cascade)
    bookId    String
}

model MemoTag {
    tagName String
    options MemoTagOption[]
    Memo    Memo            @relation(fields: [memoId], references: [id], onDelete: Cascade)
    memoId  String

    @@id([memoId, tagName])
}

model MemoTagOption {
    key     String
    value   String
    MemoTag MemoTag @relation(fields: [memoId, tagName], references: [memoId, tagName], onUpdate: Cascade, onDelete: Cascade)
    memoId  String
    tagName String

    @@id([memoId, tagName, key])
}
