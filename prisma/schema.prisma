datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Book {
    id        String   @id
    thumbnail String
    title     String
    createdAt DateTime
    memos     Memo[]
    tags      Tag[]
    settings  Bytes
}

model Memo {
    id        String    @id
    contents  String
    tags      MemoTag[]
    createdAt DateTime
    updatedAt DateTime
    Book      Book      @relation(fields: [bookId], references: [id])
    bookId    String
}

model Tag {
    type     String
    name     String
    memoTags MemoTag[]
    Book     Book      @relation(fields: [bookId], references: [id])
    bookId   String

    @@id([bookId, name])
}

model MemoTag {
    Tag     Tag             @relation(fields: [bookId, tagName], references: [bookId, name])
    bookId  String
    tagName String
    options MemoTagOption[]
    Memo    Memo            @relation(fields: [memoId], references: [id])
    memoId  String

    @@id([memoId, tagName])
}

model MemoTagOption {
    key     String
    value   String
    MemoTag MemoTag @relation(fields: [memoId, tagName], references: [memoId, tagName])
    memoId  String
    tagName String

    @@id([memoId, tagName, key])
}
