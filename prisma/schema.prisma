datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

generator client {
    provider = "prisma-client-js"
}

model Book {
    id          String   @id
    thumbnail   String
    title       String
    description String
    createdAt   DateTime
    updatedAt   DateTime
    memos       Memo[]
    settings    Bytes
}

model Memo {
    id        String   @id
    contents  String
    tags      Tag[]
    createdAt DateTime
    updatedAt DateTime
    Book      Book     @relation(fields: [bookId], references: [id], onDelete: Cascade)
    bookId    String
}

model Tag {
    symbol String
    prop   String?
    Memo   Memo    @relation(fields: [memoId], references: [id], onDelete: Cascade)
    memoId String

    @@id([memoId, symbol])
}
