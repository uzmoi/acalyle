{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "codegen": {
      "dependsOn": ["^build"],
      "inputs": ["src/**/*.graphql", "graphql.config.ts"],
      "outputs": ["**/__generated__/**", "**/*.gen.ts", "**/*.d.graphql.ts", "**/*.d.graphql.ts.map"]
    },
    "build": {
      "dependsOn": ["check"],
      "inputs": ["src/**", "!**/*.{test,test-d,stories}.*", "tsconfig.json"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "dependsOn": ["codegen"],
      "cache": false,
      "persistent": true
    },
    "check": {
      "dependsOn": ["codegen"],
      "inputs": ["!**/*.{test,test-d,stories}.*"]
    },
    "lint": {
      "dependsOn": ["codegen"]
    },
    "test": {
      "dependsOn": ["codegen"],
      "persistent": true
    },
    "coverage": {
      "dependsOn": ["codegen"],
      "outputs": ["coverage/**"]
    }
  }
}
