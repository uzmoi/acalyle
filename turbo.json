{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "codegen": {
      "dependsOn": ["^build"]
    },
    "build": {
      "dependsOn": ["check"],
      "outputs": ["dist/**"]
    },
    "dev": {
      "dependsOn": ["codegen"],
      "cache": false,
      "persistent": true
    },
    "check": {
      "dependsOn": ["codegen"]
    },
    "lint": {
      "dependsOn": ["codegen"]
    },
    "test": {
      "dependsOn": ["codegen"],
      "persistent": true
    },
    "coverage": {
      "dependsOn": ["codegen"],
      "outputs": ["coverage/**"]
    }
  }
}
