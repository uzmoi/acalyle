{
    "include": ["**/*", ".*"],
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "lib": ["ES2020"],
        "allowJs": false,
        "skipLibCheck": true,
        "strict": true,
        "forceConsistentCasingInFileNames": true,
        "module": "CommonJS",
        "moduleResolution": "Node",
        "isolatedModules": true,
        "noEmit": true,
        "typeRoots": ["./node_modules/@types"],
    },
}