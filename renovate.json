{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergePatch",
    ":dependencyDashboardApproval"
  ],
  "minimumReleaseAge": "7 days",
  "labels": ["dependencies"],
  "automergeStrategy": "squash",
  "rangeStrategy": "bump",
  "patch": {
    "groupName": "patch",
    "extends": ["schedule:weekly"]
  },
  "packageRules": [
    { "groupName": "markuplint", "matchPackageNames": ["/markuplint/"] }
  ]
}
