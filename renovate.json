{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    "schedule:weekly",
    ":automergePatch",
    ":dependencyDashboardApproval"
  ],
  "minimumReleaseAge": "7 days",
  "labels": ["dependencies"],
  "automergeStrategy": "squash",
  "rangeStrategy": "bump",
  "patch": {
    "packageRules": [
      { "groupName": "patch-npm", "matchManagers": ["npm"] },
      { "groupName": "patch-cargo", "matchManagers": ["cargo"] }
    ]
  },
  "vulnerabilityAlerts": {
    "packageRules": [
      { "groupName": "vulnerability-npm", "matchManagers": ["npm"] },
      { "groupName": "vulnerability-cargo", "matchManagers": ["cargo"] }
    ],
    "dependencyDashboardApproval": false
  },
  "packageRules": [
    { "groupName": "markuplint", "matchPackageNames": ["/markuplint/"] },
    { "groupName": "actions", "matchManagers": ["github-actions"] }
  ]
}
