{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": [
    "config:recommended",
    ":automergePatch",
    ":dependencyDashboardApproval"
  ],
  "minimumReleaseAge": "7 days",
  "labels": ["dependencies"],
  "automergeStrategy": "squash",
  "rangeStrategy": "bump",
  "patch": {
    "extends": ["schedule:weekly"],
    "packageRules": [
      { "groupName": "patch-npm", "matchManagers": ["npm"] },
      { "groupName": "patch-cargo", "matchManagers": ["cargo"] }
    ]
  },
  "vulnerabilityAlerts": {
    "groupName": "vulnerability",
    "dependencyDashboardApproval": false
  },
  "packageRules": [
    { "groupName": "markuplint", "matchPackageNames": ["/markuplint/"] }
  ]
}
